<div class="text-center">
  <h1>Sign up</h1>
  <%= render "errors" %>
  <%= form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: "col-xs-2 control-label" %>
      <div class="col-xs-8"><%= f.text_field :name, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-xs-2 control-label" %>
      <div class="col-xs-8"><%= f.email_field :email, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-xs-2 control-label" %>
      <div class="col-xs-8"><%= f.password_field :password, class: "form-control" %></div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password", class: "col-xs-2 control-label" %>
      <div class="col-xs-8"><%= f.password_field :password_confirmation, class: "form-control" %></div>
    </div>

    <%= f.submit "Create my account!", class: "btn btn-primary" %>
  <% end %>
</div>
