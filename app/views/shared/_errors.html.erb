<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(@user.errors.count, "error") %>:</h4>
      <hr />
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  </div>
<% end %>
